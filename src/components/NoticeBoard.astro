---
// src/components/NoticeBoard.astro
import { SITE_INFO } from '../consts';

const { username, repo } = SITE_INFO.github;
---

<div class="bg-white p-7 rounded-2xl shadow-sm border border-slate-100">
  <h3 class="text-xl font-bold text-slate-800 mb-2 pb-2 border-b border-slate-100 italic">
    Latest Update
  </h3>
  
  <a id="commit-link" href="#" target="_blank" class="block group">
    <div class="text-sm text-slate-400 mb-2 flex items-center gap-1 pt-1">
       <span class="w-1 h-1 bg-slate-300 rounded-full"></span>
       <span id="commit-date">loding..</span>
    </div>

    <p id="commit-message" class="text-base font-bold text-slate-600 leading-relaxed group-hover:text-blue-600 transition-colors">
      還在loding...
    </p>
    
    <div class="flex justify-end mt-4">
      <span class="text-base font-medium text-slate-400 group-hover:text-blue-500 transition-all flex items-center gap-1">
        view <span class="text-lg">↗</span>
      </span>
    </div>
  </a>
</div>

<script define:vars={{ username, repo }}>
  async function fetchLastCommit() {
    try {
      const response = await fetch(`https://api.github.com/repos/${username}/${repo}/commits?per_page=1`);
      const data = await response.json();
      
      if (data && data[0]) {
        const date = new Date(data[0].commit.author.date).toLocaleDateString();
        const message = data[0].commit.message;
        const url = data[0].html_url;

        //更新內容
        document.getElementById('commit-date').innerText = date;
        document.getElementById('commit-message').innerText = message;
        document.getElementById('commit-link').href = url;
      }
    } catch (e) {
      document.getElementById('commit-message').innerText = "暫時無法取得更新資訊";
      console.error("GitHub API Error:", e);
    }
  }

  fetchLastCommit();
</script>
