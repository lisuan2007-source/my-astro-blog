---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import NoticeBoard from '../components/NoticeBoard.astro';

const allPosts = await Astro.glob('./posts/*.md');

// 計算tag類別跟數量由大到小排序
const tagCounts = {};
allPosts.forEach(post => {
  const postTags = post.frontmatter.tags || [];
  const tagsArray = Array.isArray(postTags) ? postTags : [postTags];
  tagsArray.forEach(tag => {
    tagCounts[tag] = (tagCounts[tag] || 0) + 1;
  });
});
const sortedTags = Object.entries(tagCounts)
.sort((a, b) => b[1] - a[1]);

const pinnedPosts = allPosts.filter(post => post.frontmatter.pinned === true);
const normalPosts = allPosts.filter(post => post.frontmatter.pinned !== true);

const sortFn = (a, b) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime();

const sortedPinned = pinnedPosts.sort(sortFn);
const sortedNormal = normalPosts.sort(sortFn).slice(0, 6); // 普通文章只取 6 則

const sortedPosts = [...sortedPinned, ...sortedNormal];

---
<BaseLayout>
  <div class="flex flex-col lg:flex-row gap-8 items-start justify-center">
    
      <div class="flex-1 max-w-4xl w-full">
          <!--
      <header class="mb-10">
          <h1 class="text-3xl font-black text-slate-900">最新發布</h1>
      </header>
      -->


      <div class="flex flex-col gap-6">
        {sortedPosts.map((post) => (
            <article class="bg-white p-8 rounded-2xl shadow-sm border border-slate-100 hover:shadow-md transition-shadow relative overflow-hidden group">

        <div class="flex justify-between items-start mb-4">
            <a href={post.url} class="group">
                <h2 class="text-2xl font-bold text-slate-800 group-hover:text-blue-600 transition-colors flex items-center gap-2">
                    {post.frontmatter.pinned && (
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-pin-icon lucide-pin"><path d="M12 17v5"/><path d="M9 10.76a2 2 0 0 1-1.11 1.79l-1.78.9A2 2 0 0 0 5 15.24V16a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-.76a2 2 0 0 0-1.11-1.79l-1.78-.9A2 2 0 0 1 15 10.76V7a1 1 0 0 1 1-1 2 2 0 0 0 0-4H8a2 2 0 0 0 0 4 1 1 0 0 1 1 1z"/>
                    </svg>
                    )}
                {post.frontmatter.title}
                </h2>
            </a>
        </div>

            <!--
            <div class="flex justify-between items-start mb-4">
               <a href={post.url} class="group">
                 <h2 class="text-2xl font-bold text-slate-800 group-hover:text-blue-600 transition-colors flex items-center gap-2">
                   {post.frontmatter.title}
                   <span class="text-blue-500 opacity-0 group-hover:opacity-100 transition-all text-xl">›</span>
                 </h2>
               </a>
            </div>
            -->
            <div class="flex flex-wrap gap-4 text-sm text-slate-400 mb-4">
              <div class="flex items-center gap-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                {post.frontmatter.date}
              </div>
              <div class="flex items-center gap-1">
                {Array.isArray(post.frontmatter.tags) ? post.frontmatter.tags.join(', ') : (post.frontmatter.tags || '無tag')}
              </div>
            </div>

            <p class="text-slate-500 leading-relaxed line-clamp-2">
              {post.frontmatter.description || "點擊文章查看內容"}
            </p>
            
            <div class="absolute bottom-0 left-0 w-1 h-full bg-blue-500 opacity-0 group-hover:opacity-100 transition-all"></div>
          </article>
        ))}
      </div>
    </div>

    <!--    <aside class="w-full lg:w-64 sticky top-24 shrink-0">-->
    <aside class="w-full lg:w-64 sticky top-24 shrink-0 flex flex-col gap-8">

              <NoticeBoard />

      <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100">
        <h3 class="text-lg font-bold text-slate-800 mb-4 pb-2 border-b border-slate-50 italic">Tags</h3>
        <div class="flex flex-col gap-3">
          {sortedTags.map(([tag, count]) => (
            <a href={`/tags/${tag}`} class="flex justify-between items-center group">
              <span class="text-slate-500 group-hover:text-blue-600 transition-colors"># {tag}</span>
              <span class="text-xs bg-slate-50 text-slate-400 px-2 py-1 rounded-md group-hover:bg-blue-50 group-hover:text-blue-500 transition-colors">
                {count}
              </span>
            </a>
            ))}

            {sortedTags.length === 0 && (
            <p class="text-slate-400 text-sm italic text-center py-2">
              尚無標籤
            </p>
            )}

        </div>
      </div>
    </aside>

  </div>
</BaseLayout>
